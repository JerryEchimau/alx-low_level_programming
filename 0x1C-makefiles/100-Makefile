CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile source files into object files
main.o: main.c m.h
	$(CC) -c main.c $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c $(CFLAGS)

# Rule to delete all temporary files, object files, and the executable
clean:
	$(RM) *~

# Rule to delete only the object files
oclean:
	$(RM) main.o school.o

# Rule to delete all temporary files, object files, and the executable
fclean: clean oclean
	$(RM) $(NAME)

# Rule to force recompilation of all source files
re: fclean all

