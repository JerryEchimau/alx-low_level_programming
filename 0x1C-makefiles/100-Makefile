NAME = school
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) -o $(NAME) $(OBJ)

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@/bin/rm -f *~ \#*\# $(NAME)

oclean:
	@/bin/rm -f $(OBJ)

fclean: clean oclean

re: fclean all

